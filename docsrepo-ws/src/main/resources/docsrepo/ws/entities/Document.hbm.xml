<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="docsrepo.ws.entities.Document" table="DOCUMENT" schema="ROOT" optimistic-lock="version">
        <id name="id" type="int">
            <column name="ID" not-null="true"/>
            <generator class="identity" />
        </id>
        <property name="name" type="string">
            <column name="NAME" length="512" not-null="true" />
        </property>
        <property name="contentDescription" type="string">
            <column name="CONTENT_DESCRIPTION" length="2048" not-null="true" />
        </property>
        <property name="file" type="binary">
            <column name="FILE" not-null="true" />
        </property>
    </class>
</hibernate-mapping>
